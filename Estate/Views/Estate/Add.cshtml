@model Estate.Models.Appartment
<h1 style="text-align:center; color:indianred">Manage Estate</h1>
<br />
<div class="container">
    <ul class="breadcrumb">
        <li><a href="/Estate/Manage">Delete Estate</a></li>
        <li class="active">Add Estate</li>
    </ul>
</div>

<div class="container">
    <h2>Створи нове житло</h2><br>
    <form class="form-horizontal" method="post" enctype="multipart/form-data">
    <label for="usr">Адреса :</label>
        <div class="form-group">            
            @Html.TextBox("addres", "", new
            {
                @class = "form-control",
                @id = "addres",
                @type = "text"
            })
        </div>
        
         <label for="usr">Ціна:</label>
        <div class="form-group">            
            @Html.TextBox("price", "", new
            {
                @class = "form-control",
                @id = "price",
                @type = "number"
            })
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <label for="exampleFormControlFile1">Прикріпити фото</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="file">
            </div>
        </div>
            <label for="usr">Опис:</label>
        <div class="form-group">
                @Html.TextBox("description", "", new
        {
            @class = "form-control  input-lg",
            @id = "addres",
            @type = "text"
        })
            <br />
                <button type="submit" class="btn btn-success btn-block " asp-action="Submit">Підтвердити</button>

            </div>
        </div>
    </form>
</div>
