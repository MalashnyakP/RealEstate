@using Estate.Models
@model AppartmentsListModel

@{
    ViewData["Title"] = "Store";
}
<div class="container">
</div>
<div class="jumbotron" style="background-color:lavender">
    <div class="container text-center">
        <h1> Online Estate Store </h1>
        <p> Find your ideal place to live </p>
    </div>
</div>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="myNavbar">
            <form asp-action="About" method="get">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#">
                            <label for="usr" style="color:steelblue">Price from:</label>
                            @Html.TextBox("FromPrice", Model.LowPrice.ToString(), new
                            {
                                @class = "form-control",
                                @id = "from",
                                onchange = "this.form.submit();",
                                @type = "number",
                            })
                            <label for="pwd" style="color:steelblue">To:</label>
                            @Html.TextBox("TopPrice", Model.TopPrice.ToString(), new
                            {
                                @class = "form-control",
                                @id = "to",
                                onchange = "this.form.submit();",
                                type = "number",
                            })
                        </a><br />
                    </li>
                    <li>
                        <a href="#">
                            <label style="color:steelblue">Street:</label>
                            @Html.TextBox("SelectedStreet", Model.Street,
                                     new { @class = "form-control", onchange = "this.form.submit();" })
                        </a>
                    </li>
                    <br>
                    <lable><a href="About" class="btn btn-defaul">Show all</a></lable>
                </ul>
            </form>
        </div>
    </div>
</nav>
<br><br>
<div class="row">
    <div class="col-md-12">
        @if (Model != null)
        {
            for (int i = 0; i < Model.Appartments.Count; i += 4)
            {
                int index_0 = i;
                int index_1 = i + 1;
                int index_2 = i + 2;
                int index_3 = i + 3;

                <div class="row" style="margin-top: 50px;">
                    @if (index_0 < Model.Appartments.Count)
                    {
                        <div class="gallery_product col-lg-3 col-md-3 col-sm-3 col-xs-6 filter hdpe">
                            <div class="panel panel-danger">
                                <div class="panel-body">
                                    <table border="0" style="width: 100%; cursor: pointer;">
                                        <tr>
                                            <td><img src="~/images/@Model.Appartments[index_0].Images" class="img-responsive" style="width:500px;height:200px;"></td>
                                            <td><a asp-area="" asp-route-id="@Model.Appartments[index_0].Id" asp-controller="Estate" asp-action="Details"></a></td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <a href="/Estate/Details?Id=@Model.Appartments[index_0].Id" class="btn btn-defaul">@Model.Appartments[index_0].Adress</a>
